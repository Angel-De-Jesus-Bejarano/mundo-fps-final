<body>
    <header class="header-inicio">
        <div class="header">
            <div class="contenedor contenido-header">
                <div class="menu-barra">
                    <div class="organizacion-logo">
                        <h1>MundoFPS</h1>
                        <a href="index.html">
                            <img src="assets/Imagenes/logo.png" alt="">   
                        </a>
                    </div>
                    
                    <nav class="navegacion">
                        <nav class="navegacion">
                            <a href="Admi.html"> <img src="assets/Imagenes/administrador(a).png" alt=""> Admin</a>
                        </nav>
                    </nav>
                </div>
            </div>
        </div>

    </header>

 

    <section class="contenedor">
        <div class="org-tablas">
            <h1 class="texto-centrado">SELECCIONE EL REGISTRO QUE DESEA EDITAR</h1>
            <table class="">
                <thead>
                    <th><h3>NO.</h3></th>
                    <th><h3>Nombre</h3></th>
                    <th><h3>Apellido</h3></th>
                    <th><h3>Pais</h3> </th>
                    <th><h3>Comentario</h3></th>
                    <th><h3>Accion</h3></th>
                </thead>

                <tbody class="tabla">
                    <%for(var i = 0 ; i < listaRegistro.length ; i++){%>
                        <tr>
                            <td><p class="texto-centrado"><%= i + 1 %> </p></td>
                            <td><p class="texto-centrado"><%= listaRegistro[i].nombre %></p></td>
                            <td><p class="texto-centrado"><%= listaRegistro[i].apellido %></p></td>
                            <td><p class="texto-centrado"><%= listaRegistro[i].pais %></p></td>
                            <td><p class="texto-centrado"><%= listaRegistro[i].correo %></p></td>
                            <td><p class="texto-centrado"><%= listaRegistro[i].comentario %></p></td>
                            <td><a href="/Edicion/<%= listaRegistro[i]._id %>" class="boton-tabla-editar"><img src="assets/Imagenes/editar2.png" alt=""></a></td>
                        </tr>
                       <% } %>
                    
                </tbody>
            </table>
        </div>
        

    </section>
   
    <footer class="sitio-footer borde-cajas ">

        <div class="contenedor-footer">
            <nav class="navegacion">
            <a href="">Categorias</a>
